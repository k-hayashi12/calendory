<div class="container">
	<div class="row">
		<div class="col-lg-1">
		</div>

		<div class="col-lg-9">
			<h2>編集画面</h2><br>
				<%= form_with url: event_comment_path(@comment.id), method: :patch  do |f| %>
					<label>日記</label><%= f.text_area :comment %><br/>

					<%= f.submit "編集完了", class: "btn btn-primary"%>
					<%= link_to "削除", event_comment_path(@comment.event_id), method: :delete, "data-confirm" => "本当に削除しますか", class: "btn btn-danger" %>
				<% end %>
		</div>
	</div>
</div>