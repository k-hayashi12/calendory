<h1>Event#show</h1>

<div class ="container">
	<div class ="row">
		<div class ="col-lg-9">
			<h3>イベント名</h3>
			<p><%= @event.event_title %></p>
			<h3>アルバム</h3>
			<% @event.photos.each do |photo| %>
				<%= image_tag photo.photo_image_id.to_s, class: "user_image" %>
			<% end %>
			<h3>日記一覧</h3>
			<% @event.comments.each do |comment| %>
				<%= link_to comment.comment, event_comment_path(event_id: @event.id, id: comment.id) %></br>
			<% end %>
		</div>
		<div class ="col-lg-3">
			<%= link_to "イベント編集", edit_event_path, class: "btn btn-default" %>
			<%= link_to "写真を追加", new_event_photo_path(@event), class: "btn btn-default" %>
			<%= link_to "日記を書く", new_event_comment_path(@event), class: "btn btn-default" %>
	</div>
	<%= link_to '戻る', :back , class: "btn btn-default" %>
</div>