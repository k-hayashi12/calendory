<div class="container">
  <div class="row">
        <div class="col-lg-1">
        </div>

        <div class="col-lg-9">
          <%= form_with(model: @event, local: true) do |form| %>

            <div class="event">
              <%= form.label :イベント名 %>
              <%= form.text_field :event_title %>
            </div>

            <div class="time">
              <%= form.label :日付 %>
              <%= form.date_select :start_time %>
            </div>

            <div class="mk_event submit">
              <%= form.submit "イベントを作成", class: "btn btn-danger" %>
            </div>
          <% end %>
      </div>

  </div>
</div>