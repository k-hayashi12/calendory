<h1>User#show</h1>

<div class="container">
	<div class="row">

		<div class="col-lg-3">
			<table class="table table-striped">
				<thead>
					<h3>ユーザー情報</h3>
				</thead>
				<tbody>
					<tr><th>氏名</th><td><%= @user.name %></td></tr>
					<tr><th>メールアドレス</th><td><%= @user.email %></td></tr>
					<tr><th>検索用ID</th><td><%= @user.search_number %></td></tr>
				</tbody>
			</table>

				<div>
					<%= link_to "編集", edit_user_path, class: "btn btn-default" %>
				</div>

			<table class="">
				<thead>
					<h3>参加中のカレンダー</h3>
				</thead>
				<tbody>
				</tbody>
			</table>
		</div>

		<div class="col-lg-9">
			<h2>My Calendar</h2>
			<%= link_to "イベントを作成する", new_event_path %>
			<%= month_calendar events: @events do |date, events| %>
  				<%= date.day %>

		  		<% events.each do |event| %>
   					<div>
      					<%= link_to event.event_title, event %>
   					</div>
 				<% end %>
			<% end %>
		</div>

	</div>
</div>

<%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-block" %>